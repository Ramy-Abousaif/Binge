<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_binge"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:background="@drawable/button"
        android:fontFamily="@font/exo"
        android:onClick="buttonBinge"
        android:text="Binge!"
        android:textAllCaps="false"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/snack_recommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/exo"
        android:layout_below="@+id/button_binge"
        android:text=" "
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

    <ImageView
        android:id="@+id/movie_poster_binge"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/snack_recommendation"
        android:layout_marginBottom="120dp" />

    <TextView
        android:id="@+id/movie_recommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/exo"
        android:layout_above="@id/movie_poster_binge"
        android:text="@string/binge_instructions"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />
</RelativeLayout>